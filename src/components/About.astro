    }

    .about-sidebar {
      grid-column: 2;
    }
  }

  @media (max-width: 968px) {
    .about-grid {
      grid-template-columns: 1fr;
    }

    .about-image {
      order: -1;
      max-width: 400px;
      margin: 0 auto;
    }

    .about-sidebar {
      order: -1;
    }
  }

  @media (max-width: 640px) {
    .about {
