<style>
  .about {
    padding: var(--space-16) 0;
    background-color: var(--color-surface);
  }

  .section-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-6);
    position: relative;
  }

  .section-title::after {
    content: '';
    display: block;
    width: 60px;
    height: 4px;
    background: var(--gradient-primary);
    border-radius: var(--radius-full);
    margin-top: var(--space-3);
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 380px 400px;
    gap: var(--space-8);
    align-items: start;
  }

  .about-text p {
    margin-bottom: var(--space-4);
    line-height: var(--leading-relaxed);
  }

  .about-text strong {
    color: var(--color-primary);
    font-weight: var(--font-bold);
  }

  .about-text .project-link {
    text-decoration: none;
    transition: opacity var(--transition-fast);
  }

  .about-text .project-link:hover {
    opacity: 0.7;
    text-decoration: underline;
  }

  .about-text .project-link strong {
    color: var(--color-primary);
  }

  .about-image {
    position: sticky;
    top: calc(var(--space-20) + var(--space-4));
  }

  .presentation-frame {
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.05) 0%, rgba(20, 184, 166, 0.05) 100%);
    border: 1px solid var(--color-neutral-200);
  }

  .presentation-frame:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .presentation-photo {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    background-color: var(--color-neutral-100);
  }

  .image-caption {
    padding: var(--space-3);
    text-align: center;
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    font-style: italic;
    background: white;
  }

  .about-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .pillars-card,
  .recognition-card {
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.05) 0%, rgba(20, 184, 166, 0.05) 100%);
    border: 1px solid var(--color-neutral-200);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
  }

  .pillars-title,
  .recognition-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-4);
    color: var(--color-text-primary);
  }

  .pillar {
    display: flex;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .pillar:last-child {
    margin-bottom: 0;
  }

  .pillar-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: white;
    border-radius: var(--radius-lg);
    font-size: var(--text-2xl);
    box-shadow: var(--shadow-sm);
  }

  .pillar-content {
    flex: 1;
  }

  .pillar-name {
