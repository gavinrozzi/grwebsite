---
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'GitHub', url: 'https://github.com/gavinrozzi', icon: 'github' },
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/gavin-rozzi/', icon: 'linkedin' },
  { name: 'Google Scholar', url: 'https://scholar.google.com/citations?user=slj82AIAAAAJ', icon: 'scholar' },
  { name: 'Twitter/X', url: 'https://x.com/gavroz', icon: 'twitter' },
];

const footerLinks = [
  { name: 'Portfolio', path: '/portfolio' },
  { name: 'Blog', path: '/blog' },
  { name: 'Publications', path: '/publications' },
  { name: 'Media & Speaking', path: '/media' },
  { name: 'Contact', path: '/contact' },
];
---

<footer class="footer">
  <div class="footer-content container">
    <div class="footer-grid">
      <div class="footer-about">
        <h3 class="footer-title">Gavin Rozzi</h3>
        <p class="footer-description">
          Digital Transformation & Civic Technology Executive building data-driven platforms that turn policy into impact.
        </p>
        <div class="social-links">
          {socialLinks.map((link) => (
            <a
              href={link.url}
              class="social-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={link.name}
            >
              {link.icon === 'github' && (
                <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              )}
              {link.icon === 'linkedin' && (
                <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {link.icon === 'scholar' && (
                <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 24a7 7 0 1 1 0-14 7 7 0 0 1 0 14zm0-24L0 9.5l4.838 3.94A8 8 0 0 1 12 9a8 8 0 0 1 7.162 4.44L24 9.5z"/>
                </svg>
              )}
              {link.icon === 'twitter' && (
                <svg class="social-icon" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <div class="footer-links">
        <h4 class="footer-links-title">Quick Links</h4>
        <ul class="footer-nav">
          {footerLinks.map((link) => (
            <li>
              <a href={link.path} class="footer-link">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div class="footer-contact">
        <h4 class="footer-links-title">Get in Touch</h4>
        <p class="contact-info">
          <a href="/contact" class="footer-link">Contact Me</a>
        </p>
        <p class="contact-info">
          <a href="tel:+16092224161" class="footer-link">(609) 222-4161</a>
        </p>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright">
        Â© {currentYear} Gavin Rozzi. Licensed under{' '}
        <a href="https://creativecommons.org/licenses/by-nc-nd/4.0/" target="_blank" rel="noopener noreferrer" class="license-link">
          CC BY-NC-ND 4.0
        </a>
      </p>
      <p class="disclaimer">
        Views expressed on this website are personal and do not represent those of my employers or organizations of which I am a part.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-neutral-800);
    color: var(--color-neutral-50);
    padding: var(--space-12) 0 var(--space-6);
    margin-top: var(--space-16);
  }

  .footer-content {
    max-width: var(--container-width);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: var(--space-8);
    margin-bottom: var(--space-8);
  }

  .footer-title {
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-3);
  }

  .footer-description {
    color: var(--color-neutral-300);
    margin-bottom: var(--space-4);
    line-height: var(--leading-relaxed);
  }

  .social-links {
    display: flex;
    gap: var(--space-2);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    color: var(--color-neutral-50);
    transition: all var(--transition-fast);
  }

  .social-link:hover {
    background-color: var(--color-primary);
    transform: translateY(-2px);
  }

  .social-icon {
    width: 20px;
    height: 20px;
    display: block;
    color: currentColor;
  }

  .footer-links-title {
    font-family: var(--font-heading);
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    color: var(--color-neutral-50);
    margin-bottom: var(--space-3);
  }

  .footer-nav {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-nav li {
    margin-bottom: var(--space-2);
  }

  .footer-link {
    color: var(--color-neutral-300);
    text-decoration: none;
    transition: color var(--transition-fast);
    font-size: var(--text-sm);
  }

  .footer-link:hover {
    color: var(--color-primary);
  }

  .contact-info {
    margin-bottom: var(--space-2);
    color: var(--color-neutral-300);
    font-size: var(--text-sm);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: var(--space-6);
    text-align: center;
  }

  .copyright,
  .disclaimer {
    color: var(--color-neutral-400);
    font-size: var(--text-sm);
    margin-bottom: var(--space-2);
  }

  .license-link {
    color: var(--color-neutral-300);
    text-decoration: underline;
  }

  .license-link:hover {
    color: var(--color-primary);
  }

  @media (max-width: 820px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-6);
    }

    .footer-about {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 768px) {
    .footer {
      padding: var(--space-10) 0 var(--space-5);
    }

    .footer-grid {
      gap: var(--space-5);
    }
  }

  @media (max-width: 640px) {
    .footer {
      padding: var(--space-8) 0 var(--space-4);
      margin-top: var(--space-12);
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: var(--space-5);
    }

    .footer-about {
      grid-column: auto;
    }

    .footer-title {
      font-size: var(--text-lg);
    }

    .social-links {
      gap: var(--space-1);
    }

    .social-link {
      width: 36px;
      height: 36px;
    }
  }

  @media (max-width: 480px) {
    .footer {
      padding: var(--space-6) 0 var(--space-3);
      margin-top: var(--space-10);
    }

    .footer-grid {
      gap: var(--space-4);
    }

    .copyright,
    .disclaimer {
      font-size: var(--text-xs);
    }
  }
</style>
