<style>
  .hero {
    position: relative;
    padding: var(--space-16) 0 var(--space-12);
    overflow: hidden;
    min-height: 80vh;
    display: flex;
    align-items: center;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    background: var(--gradient-hero);
    opacity: 0.1;
    z-index: -1;
  }

  .hero-background::after {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 20% 30%, rgba(249, 115, 22, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(20, 184, 166, 0.15) 0%, transparent 50%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  .hero-text {
    max-width: 800px;
    margin-bottom: var(--space-8);
  }

  .hero-title {
    font-size: var(--text-5xl);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    margin-bottom: var(--space-4);
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: var(--text-2xl);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
    font-weight: var(--font-medium);
  }

  .hero-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
    max-width: 700px;
  }

  .hero-actions {
    display: flex;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-5);
    font-family: var(--font-heading);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    text-decoration: none;
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    cursor: pointer;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: var(--gradient-primary);
    color: white;
    box-shadow: var(--shadow-md);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .btn-secondary {
    background-color: transparent;
    color: var(--color-text-primary);
    border-color: var(--color-neutral-300);
  }

  .btn-secondary:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    background-color: rgba(249, 115, 22, 0.05);
  }

  .hero-expertise {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: var(--space-8);
    max-width: 1100px;
    margin-top: var(--space-8);
  }

  .expertise-left {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .expertise-headline {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: var(--color-text-primary);
    margin-bottom: 0;
  }

  .expertise-vision {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
    max-width: 650px;
  }

  .impact-diagram {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-6);
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.95) 100%);
    backdrop-filter: blur(10px);
    border: 1px solid var(--color-neutral-200);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-md);
  }

  .impact-stage {
    flex: 1;
    text-align: center;
  }

  .stage-title {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-2);
  }

  .stage-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  .stage-connector {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .expertise-right {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .why-work-section {
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.08) 0%, rgba(20, 184, 166, 0.08) 100%);
    border: 1px solid var(--color-neutral-200);
    border-radius: var(--radius-xl);
    padding: var(--space-5);
  }

  .why-work-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-3);
  }

  .why-work-text {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin: 0;
  }

  .career-timeline {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .timeline-item {
    display: flex;
    gap: var(--space-3);
    position: relative;
  }

  .timeline-item:not(:last-child)::after {
    content: '';
    position: absolute;
    left: 11px;
    top: 32px;
    bottom: -16px;
    width: 2px;
    background: linear-gradient(180deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    opacity: 0.3;
  }

  .timeline-marker {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    border-radius: var(--radius-full);
    background: var(--gradient-primary);
    border: 3px solid white;
    box-shadow: var(--shadow-md);
    position: relative;
    z-index: 1;
  }

  .timeline-content {
    flex: 1;
    padding-top: 2px;
  }

  .timeline-year {
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-1);
  }

  .timeline-title {
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-1);
  }

  .timeline-desc {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
  }

  @media (max-width: 968px) {
    .hero-expertise {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .expertise-right {
      order: -1;
    }

    .impact-diagram {
      flex-direction: column;
      gap: var(--space-4);
    }

    .stage-connector {
      transform: rotate(90deg);
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--space-12) 0 var(--space-8);
      min-height: auto;
    }

    .hero-title {
      font-size: var(--text-4xl);
    }

    .hero-subtitle {
      font-size: var(--text-xl);
    }

    .hero-description {
      font-size: var(--text-base);
    }

    .hero-actions {
      flex-direction: column;
    }

    .btn {
      width: 100%;
      max-width: 300px;
    }

    .expertise-headline {
      font-size: var(--text-2xl);
    }

    .impact-diagram {
      padding: var(--space-4);
    }

    .stage-title {
      font-size: var(--text-base);
    }

    .stage-description {
      font-size: var(--text-xs);
    }

    .timeline-item {
      gap: var(--space-2);
    }
  }

  @media (max-width: 640px) {
    .expertise-headline {
      font-size: var(--text-xl);
    }
  }
</style>
