---
/**
 * Featured Projects Component
 *
 * Displays a curated selection of portfolio projects on the homepage.
 * Each featured project links directly to its corresponding portfolio detail page.
 *
 * Integration Notes:
 * - Project slugs must match the filename in src/content/portfolio/
 * - External links are shown as secondary actions
 * - Clicking "View Project" navigates to the full portfolio entry
 */

const featuredProjects = [
  {
    title: 'NJ Eviction Guide',
    slug: 'nj-eviction-guide', // Links to /portfolio/nj-eviction-guide
    category: 'Government Impact',
    description: 'Interactive self-help tool connecting New Jersey\'s most vulnerable residents directly to housing assistance and legal resources.',
    impact: 'Empowering residents to navigate the eviction process',
    externalLink: 'https://evictionguide.nj.gov',
    tags: ['React', 'TypeScript', 'Public Service'],
  },
  {
    title: 'Municipal Lead Reporting Portal',
    slug: 'municipal-lead-portal', // Links to /portfolio/municipal-lead-portal
    category: 'Government Compliance',
    description: 'Statewide compliance platform capturing residential lead-paint inspection data for all 564 New Jersey municipalities.',
    impact: 'Operationalized NJ\'s Lead Paint Inspection Law',
    externalLink: 'https://www.nj.gov/dca/dhcr/MuniLeadReportPort.shtml',
    tags: ['Data Collection', 'Compliance', 'GIS'],
  },
  {
    title: 'OPRAmachine',
    slug: 'opramachine', // Links to /portfolio/opramachine
    category: 'Civic Technology',
    description: 'New Jersey\'s first statewide freedom of information platform, processing 75,000+ public records requests and releasing 250GB of open data.',
    impact: 'Transforming government transparency in NJ',
    externalLink: 'https://opramachine.com',
    tags: ['Ruby on Rails', 'Open Data', 'Transparency'],
  },
  {
    title: 'zipcodeR',
    slug: 'zipcoder', // Links to /portfolio/zipcoder
    category: 'Open Source',
    description: 'R package for working with ZIP code data, published in Software Impacts journal and available on CRAN.',
    impact: 'Used by researchers nationwide',
    externalLink: 'https://github.com/gavinrozzi/zipcodeR',
    tags: ['R', 'Open Source', 'Research'],
  },
];
---

<section class="featured-projects">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Featured Work</h2>
      <p class="section-subtitle">
        Projects that demonstrate the intersection of technology, policy, and public service
      </p>
    </div>

    <div class="projects-grid">
      {featuredProjects.map((project) => (
        <article class="project-card" data-project-slug={project.slug}>
          <div class="project-category">{project.category}</div>
          <h3 class="project-title">{project.title}</h3>
          <p class="project-description">{project.description}</p>
          <div class="project-impact">
            <span class="impact-icon">üí°</span>
            <span class="impact-text">{project.impact}</span>
          </div>
          <div class="project-tags">
            {project.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
          <div class="project-actions">
            <a
              href={`/portfolio/${project.slug}`}
              class="project-link primary"
              data-portfolio-link
            >
              View Project ‚Üí
            </a>
            {project.externalLink && (
              <a
                href={project.externalLink}
                class="project-link secondary"
                target="_blank"
                rel="noopener noreferrer"
                title="Visit live site"
              >
                üåê
              </a>
            )}
          </div>
        </article>
      ))}
    </div>

    <div class="cta-section">
      <a href="/portfolio" class="btn-outline">View Full Portfolio</a>
    </div>
  </div>
</section>

<style>
  .featured-projects {
    padding: var(--space-16) 0;
    background: linear-gradient(180deg, var(--color-surface) 0%, var(--color-surface-alt) 100%);
  }

  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--space-12);
  }

  .section-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-3);
  }

  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-8);
  }

  .project-card {
    background: white;
    border: 1px solid var(--color-neutral-200);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-primary);
  }

  .project-category {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-primary);
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.1), rgba(20, 184, 166, 0.1));
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-3);
    width: fit-content;
  }

  .project-title {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-3);
    color: var(--color-text-primary);
  }

  .project-description {
    color: var(--color-text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-3);
    flex-grow: 1;
  }

  .project-impact {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3);
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.05), rgba(20, 184, 166, 0.05));
    border-radius: var(--radius-md);
    margin-bottom: var(--space-4);
    border-left: 3px solid var(--color-primary);
  }

  .impact-icon {
    font-size: var(--text-xl);
    flex-shrink: 0;
  }

  .impact-text {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-text-primary);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .tag {
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-2);
    background-color: var(--color-surface-alt);
    color: var(--color-text-secondary);
    border-radius: var(--radius-full);
    font-weight: var(--font-medium);
  }

  /* Updated actions layout to accommodate both links */
  .project-actions {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-3);
    margin-top: auto;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    font-weight: var(--font-medium);
    text-decoration: none;
    transition: all var(--transition-fast);
  }

  .project-link.primary {
    color: var(--color-primary);
    flex-grow: 1;
  }

  .project-link.primary:hover {
    gap: var(--space-1);
    color: var(--color-primary-hover);
  }

  .project-link.secondary {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    transition: all var(--transition-fast);
  }

  .project-link.secondary:hover {
    color: var(--color-primary);
    transform: scale(1.2);
  }

  .cta-section {
    text-align: center;
    margin-top: var(--space-8);
  }

  .btn-outline {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-6);
    font-family: var(--font-heading);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    text-decoration: none;
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    background-color: transparent;
    color: var(--color-text-primary);
    border: 2px solid var(--color-neutral-300);
  }

  .btn-outline:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.05), rgba(20, 184, 166, 0.05));
    transform: translateY(-2px);
  }

  @media (max-width: 820px) {
    .projects-grid {
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .featured-projects {
      padding: var(--space-12) 0;
    }

    .section-title {
      font-size: var(--text-3xl);
    }
  }

  @media (max-width: 640px) {
    .projects-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .project-card {
      padding: var(--space-5);
    }

    .section-title {
      font-size: var(--text-2xl);
    }
  }

  @media (max-width: 480px) {
    .featured-projects {
      padding: var(--space-10) 0;
    }

    .project-card {
      padding: var(--space-4);
    }

    .project-title {
      font-size: var(--text-xl);
    }

    .btn-outline {
      width: 100%;
      max-width: 320px;
    }
  }
</style>
