---
import '../styles/fonts.css';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
}

const {
  title,
  description = 'Gavin Rozzi: Digital transformation executive leading data-driven government innovation in New Jersey. Building platforms that turn policy into measurable impact for millions of residents.',
  image = '/og-default.png',
  type = 'website',
  publishedTime,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = new URL(image, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <script is:inline>
      (function() {
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
          document.body.setAttribute('data-theme', savedTheme);
        } else if (window.matchMedia('(prefers-color-scheme: light)').matches) {
          document.body.setAttribute('data-theme', 'light');
        } else {
          document.body.setAttribute('data-theme', 'dark');
        }
      })();
    </script>

    <!-- Performance Optimizations -->
    <link rel="preconnect" href="https://analytics.gavinrozzi.com" />
    <link rel="dns-prefetch" href="https://analytics.gavinrozzi.com" />

    <!-- Additional Discovery -->
    <link rel="alternate" type="application/rss+xml" title="Gavin Rozzi's Blog" href="/rss.xml" />
    <link rel="author" href="/contact" />
    <link rel="humans" href="/humans.txt" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="author" content="Gavin Rozzi" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Gavin Rozzi" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    <meta property="og:locale" content="en_US" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {publishedTime && <meta property="article:author" content="https://www.gavinrozzi.com/contact" />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImage} />
    <meta name="twitter:creator" content="@gavroz" />
    <meta name="twitter:site" content="@gavroz" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" is:inline set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Gavin Rozzi",
      "url": "https://www.gavinrozzi.com",
      "image": "https://www.gavinrozzi.com/og-default.png",
      "jobTitle": "Director of Data Center Administration",
      "description": "Gavin Rozzi: Digital transformation executive leading data-driven government innovation in New Jersey. Building platforms that turn policy into measurable impact for millions of residents.",
      "address": {
        "@type": "PostalAddress",
        "addressRegion": "NJ",
        "addressCountry": "US"
      },
      "email": "contact@gavinrozzi.com",
      "knowsAbout": [
        "Digital Transformation",
        "Civic Technology",
        "Data Science",
        "Public Policy",
        "Full Stack Development",
        "Open Data",
        "Government Technology"
      ],
      "alumniOf": {
        "@type": "EducationalOrganization",
        "name": "Rutgers University"
      },
      "sameAs": [
        "https://github.com/gavinrozzi",
        "https://www.linkedin.com/in/gavin-rozzi/",
        "https://twitter.com/gavroz",
        "https://x.com/gavroz",
        "https://scholar.google.com/citations?user=slj82AIAAAAJ"
      ]
    })} />

    <!-- Additional SEO -->
    <meta name="author" content="Gavin Rozzi" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="google-site-verification" content="" />
    <meta name="msvalidate.01" content="" />

    <!-- Matomo -->
    <script is:inline>
      var _paq = window._paq = window._paq || [];
      _paq.push(['trackPageView']);
      _paq.push(['enableLinkTracking']);
      (function() {
        var u="//analytics.gavinrozzi.com/";
        _paq.push(['setTrackerUrl', u+'matomo.php']);
        _paq.push(['setSiteId', '9']);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
      })();
    </script>
    <!-- End Matomo Code -->

    <slot name="head" />
  </head>
  <body>
    <a href="#main-content" class="visually-hidden">Skip to content</a>
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />

    <!-- Matomo Image Tracker (noscript fallback) -->
    <!-- Keep as standard img tag - external tracking pixel from analytics domain -->
    <noscript>
      <img referrerpolicy="no-referrer-when-downgrade" src="https://analytics.gavinrozzi.com/matomo.php?idsite=9&rec=1" style="border:0" alt="" />
    </noscript>
    <!-- End Matomo -->
  </body>
</html>
