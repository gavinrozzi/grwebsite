---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import FeaturedProjects from '../components/FeaturedProjects.astro';
import ThoughtLeadership from '../components/ThoughtLeadership.astro';
---

<BaseLayout
  title="Gavin Rozzi - Digital Transformation & Civic Technology Executive"
  description="Gavin Rozzi: Digital transformation executive leading data-driven government innovation in New Jersey. Building platforms that turn policy into measurable impact for millions of residents."
>
  <Fragment slot="head">
    <script is:inline type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Gavin Rozzi",
      "url": "https://www.gavinrozzi.com",
      "description": "Gavin Rozzi: Digital transformation executive leading data-driven government innovation in New Jersey. Building platforms that turn policy into measurable impact for millions of residents.",
      "author": {
        "@type": "Person",
        "name": "Gavin Rozzi",
        "jobTitle": "Director of Data Center Administration",
        "url": "https://www.gavinrozzi.com"
      },
      "potentialAction": {
        "@type": "SearchAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "https://www.gavinrozzi.com/?q={search_term_string}"
        },
        "query-input": "required name=search_term_string"
      }
    })} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ProfilePage",
      "mainEntity": {
        "@type": "Person",
        "name": "Gavin Rozzi",
        "url": "https://www.gavinrozzi.com",
        "description": "Gavin Rozzi: Digital transformation executive leading data-driven government innovation in New Jersey. Building platforms that turn policy into measurable impact for millions of residents."
      }
    })} />
  </Fragment>
  <Hero />
  <ThoughtLeadership />
  <About />
  <FeaturedProjects />

  <section class="cta-banner">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Let's Build Something Impactful Together</h2>
        <p class="cta-text">
          I'm available for consulting on digital transformation, civic technology,
          and mission-driven leadership opportunities.
        </p>
        <div class="cta-actions">
          <a href="/contact" class="btn btn-primary">Get in Touch</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .cta-banner {
    padding: var(--space-16) 0;
    background: var(--gradient-hero);
    position: relative;
    overflow: hidden;
  }

  .cta-banner::before {
    content: '';
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 30% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 70% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
  }

  .cta-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .cta-title {
    font-size: var(--text-4xl);
    color: white;
    margin-bottom: var(--space-4);
  }

  .cta-text {
    font-size: var(--text-xl);
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: var(--space-6);
    line-height: var(--leading-relaxed);
    font-weight: var(--font-medium);
    letter-spacing: 0.01em;
  }

  .cta-actions {
    display: flex;
    gap: var(--space-3);
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3) var(--space-5);
    font-family: var(--font-heading);
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    text-decoration: none;
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    border: 2px solid transparent;
  }

  .btn-primary {
    background-color: white;
    color: var(--color-primary);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
  }

  .btn-secondary {
    background-color: transparent;
    color: white;
    border-color: white;
  }

  .btn-secondary:hover {
    background-color: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .cta-banner {
      padding: var(--space-12) 0;
    }

    .cta-title {
      font-size: var(--text-3xl);
    }

    .cta-text {
      font-size: var(--text-lg);
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 320px;
    }
  }

  @media (max-width: 640px) {
    .cta-banner {
      padding: var(--space-10) 0;
    }

    .cta-title {
      font-size: var(--text-2xl);
    }
  }

  @media (max-width: 480px) {
    .cta-banner {
      padding: var(--space-8) 0;
    }

    .cta-title {
      font-size: var(--text-xl);
    }

    .cta-text {
      font-size: var(--text-sm);
    }

    .btn {
      max-width: 100%;
      padding: var(--space-2) var(--space-4);
      font-size: var(--text-sm);
    }
  }
</style>
