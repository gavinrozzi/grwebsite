---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import ContourCanvas from '../components/ContourCanvas.astro';

const allPortfolioItems = await getCollection('portfolio');
const sortedPortfolio = allPortfolioItems.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const categories = [
  { id: 'all', label: 'All Projects', count: sortedPortfolio.length },
  { id: 'government', label: 'Government', count: sortedPortfolio.filter(p => p.data.category === 'government').length },
  { id: 'civic-tech', label: 'Civic Tech', count: sortedPortfolio.filter(p => p.data.category === 'civic-tech').length },
  { id: 'open-source', label: 'Open Source', count: sortedPortfolio.filter(p => p.data.category === 'open-source').length },
  { id: 'research', label: 'Research', count: sortedPortfolio.filter(p => p.data.category === 'research').length },
];

const categoryLabels = {
  'government': 'Government',
  'civic-tech': 'Civic Technology',
  'open-source': 'Open Source',
  'research': 'Research',
};
---

<BaseLayout
  title="Portfolio - Gavin Rozzi"
  description="Explore my portfolio of government impact projects, civic technology platforms, open source tools, and data visualization work."
>
  <Fragment slot="head">
    <script is:inline type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ItemList",
      "itemListElement": sortedPortfolio.map((project, index) => ({
        "@type": "ListItem",
        "position": index + 1,
        "url": `${Astro.site}portfolio/${project.slug}/`,
        "name": project.data.title,
        "description": project.data.summary
      }))
    })} />
  </Fragment>
  <section class="page-hero">
    <ContourCanvas />
    <div class="container">
      <h1 class="page-title">Portfolio</h1>
      <p class="page-subtitle">
        Exploring the intersection of technology, policy, and public service
      </p>
    </div>
  </section>

  <section class="portfolio-section">
    <div class="container">
      <div class="filter-controls">
        <div class="filter-label">Filter by:</div>
        <div class="filter-buttons" id="filterButtons">
          {categories.map((category) => (
            <button
              class={`filter-btn ${category.id === 'all' ? 'active' : ''}`}
              data-category={category.id}
            >
              {category.label}
              <span class="count">({category.count})</span>
            </button>
          ))}
        </div>
      </div>

      <div class="portfolio-grid" id="portfolioGrid">
        {sortedPortfolio.map((project) => (
          <article
            class="portfolio-card"
            data-category={project.data.category}
          >
            <div class="card-header">
              <span class="category-badge">{categoryLabels[project.data.category]}</span>
              <time class="project-date" datetime={project.data.date.toISOString()}>
                {project.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}
              </time>
            </div>

            <h3 class="project-title">
              <a href={`/portfolio/${project.slug}`}>{project.data.title}</a>
            </h3>

            <p class="project-summary">{project.data.summary}</p>

            {project.data.metrics && project.data.metrics.length > 0 && (
              <div class="project-metrics">
                {project.data.metrics.slice(0, 2).map((metric) => (
                  <div class="metric-item">
                    <div class="metric-value">{metric.value}</div>
                    <div class="metric-label">{metric.label}</div>
                  </div>
                ))}
              </div>
            )}

            <div class="project-tags">
              {project.data.tags.slice(0, 4).map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>

            <div class="card-footer">
              <a href={`/portfolio/${project.slug}`} class="details-link">
                View Details ‚Üí
              </a>
              {project.data.links?.website && (
                <a
                  href={project.data.links.website}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="external-link"
                  title="Visit website"
                >
                  üåê
                </a>
              )}
            </div>
          </article>
        ))}
      </div>

      <div class="no-results" id="noResults" style="display: none;">
        <div class="no-results-icon">üîç</div>
        <h3>No projects found</h3>
        <p>Try selecting a different category filter.</p>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll<HTMLButtonElement>('.filter-btn');
    const portfolioCards = document.querySelectorAll<HTMLElement>('.portfolio-card');
    const noResults = document.getElementById('noResults');
    const portfolioGrid = document.getElementById('portfolioGrid');

    if (!noResults || !portfolioGrid) return;

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const category = button.getAttribute('data-category');

        // Update active button
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        // Filter cards with animation
        let visibleCount = 0;

        portfolioCards.forEach((card, index) => {
          const cardCategory = card.getAttribute('data-category');
          const shouldShow = category === 'all' || cardCategory === category;

          if (shouldShow) {
            visibleCount++;
            card.style.display = 'flex';
            // Stagger animation
            setTimeout(() => {
              card.classList.add('fade-in');
            }, index * 50);
          } else {
            card.classList.remove('fade-in');
            setTimeout(() => {
              card.style.display = 'none';
            }, 300);
          }
        });

        // Show/hide no results message
        if (visibleCount === 0) {
          noResults.style.display = 'block';
          portfolioGrid.style.display = 'none';
        } else {
          noResults.style.display = 'none';
          portfolioGrid.style.display = 'grid';
        }
      });
    });

    // Initialize with fade-in animation
    portfolioCards.forEach((card, index) => {
      setTimeout(() => {
        card.classList.add('fade-in');
      }, index * 50);
    });
  });
</script>

<style>
  .page-hero {
    position: relative;
    padding: var(--space-12) 0 var(--space-8);
    text-align: center;
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.05) 0%, rgba(20, 184, 166, 0.05) 100%);
    border-bottom: 1px solid var(--color-neutral-200);
    overflow: hidden;
  }

  .page-hero .container {
    position: relative;
    z-index: 1;
  }

  .page-title {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-3);
    color: var(--color-text-primary);
  }

  .page-subtitle {
    font-size: var(--text-xl);
    color: var(--color-text-secondary);
    max-width: 750px;
    margin: 0 auto;
    text-wrap: balance;
    hyphens: manual;
    word-break: normal;
  }

  .portfolio-section {
    padding: var(--space-12) 0;
    min-height: 60vh;
  }

  .filter-controls {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
    flex-wrap: wrap;
  }

  .filter-label {
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
    font-size: var(--text-lg);
  }

  .filter-buttons {
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .filter-btn {
    padding: var(--space-2) var(--space-4);
    background-color: white;
    border: 2px solid var(--color-neutral-300);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all var(--transition-fast);
    display: flex;
    align-items: center;
    gap: var(--space-1);
  }

  .filter-btn:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
    transform: translateY(-2px);
  }

  .filter-btn.active {
    background: var(--gradient-primary);
    border-color: transparent;
    color: white;
  }

  .filter-btn .count {
    opacity: 0.8;
    font-size: var(--text-xs);
  }

  .portfolio-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-6);
    transition: all var(--transition-base);
  }

  .portfolio-card {
    background: white;
    border: 1px solid var(--color-neutral-200);
    border-radius: var(--radius-xl);
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    transition: all var(--transition-base);
    opacity: 0;
    transform: translateY(20px);
  }

  .portfolio-card.fade-in {
    opacity: 1;
    transform: translateY(0);
  }

  .portfolio-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-primary);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-3);
  }

  .category-badge {
    display: inline-block;
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-primary);
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.1), rgba(20, 184, 166, 0.1));
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-md);
  }

  .project-date {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
  }

  .project-title {
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-3);
    line-height: var(--leading-tight);
  }

  .project-title a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .project-title a:hover {
    color: var(--color-primary);
  }

  .project-summary {
    color: var(--color-text-secondary);
    line-height: 1.65;
    margin-bottom: var(--space-4);
    flex-grow: 1;
    hyphens: manual;
    word-break: normal;
    text-wrap: pretty;
  }

  .project-metrics {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-3);
    margin-bottom: var(--space-4);
    padding: var(--space-3);
    background: linear-gradient(135deg, rgba(249, 115, 22, 0.05), rgba(20, 184, 166, 0.05));
    border-radius: var(--radius-md);
  }

  .metric-item {
    text-align: center;
  }

  .metric-value {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-1);
  }

  .metric-label {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .tag {
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-2);
    background-color: var(--color-surface-alt);
    color: var(--color-text-secondary);
    border-radius: var(--radius-full);
    font-weight: var(--font-medium);
  }

  .card-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
    padding-top: var(--space-3);
    border-top: 1px solid var(--color-neutral-200);
  }

  .details-link {
    color: var(--color-primary);
    font-weight: var(--font-medium);
    text-decoration: none;
    transition: all var(--transition-fast);
    display: inline-flex;
    align-items: center;
  }

  .details-link:hover {
    gap: var(--space-1);
    color: var(--color-primary-hover);
  }

  .external-link {
    font-size: var(--text-xl);
    text-decoration: none;
    transition: transform var(--transition-fast);
    display: inline-flex;
  }

  .external-link:hover {
    transform: scale(1.2);
  }

  .no-results {
    text-align: center;
    padding: var(--space-12) 0;
  }

  .no-results-icon {
    font-size: 4rem;
    margin-bottom: var(--space-4);
  }

  .no-results h3 {
    font-size: var(--text-2xl);
    color: var(--color-text-primary);
    margin-bottom: var(--space-2);
  }

  .no-results p {
    color: var(--color-text-secondary);
  }

  @media (max-width: 820px) {
    .portfolio-grid {
      grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    }

    .filter-controls {
      gap: var(--space-3);
    }
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: var(--text-3xl);
    }

    .page-subtitle {
      font-size: var(--text-xl);
      line-height: 1.7;
    }
  }

  @media (max-width: 640px) {
    .page-title {
      font-size: var(--text-2xl);
    }

    .page-subtitle {
      font-size: var(--text-lg);
      line-height: 1.75;
    }

    .portfolio-section {
      padding: var(--space-8) 0;
    }

    .filter-controls {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-2);
    }

    .filter-buttons {
      width: 100%;
    }

    .filter-btn {
      /* Allow buttons to grow but prevent text overflow */
      flex: 1 1 auto;
      justify-content: center;
      min-width: 0; /* Allow flexbox to shrink below content size */
      max-width: 100%; /* Prevent overflow beyond container */

      /* Handle text overflow gracefully */
      white-space: nowrap; /* Keep text on single line */
      overflow: hidden; /* Hide overflowing text */
      text-overflow: ellipsis; /* Add ellipsis for truncated text */
    }

    .portfolio-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .project-metrics {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .filter-label {
      font-size: var(--text-base);
    }

    .filter-btn {
      font-size: var(--text-xs);
      padding: var(--space-1) var(--space-3);

      /* Ensure adequate touch target size (min 44x44px for accessibility) */
      min-height: 44px;
    }

    .filter-btn .count {
      /* Reduce count opacity on very small screens to emphasize label */
      opacity: 0.7;
      font-size: 0.65rem; /* Slightly smaller than xs on mobile */
    }

    .portfolio-card {
      padding: var(--space-4);
    }

    .project-title {
      font-size: var(--text-xl);
    }
  }

  /* Additional breakpoint for very small devices (320px) */
  @media (max-width: 375px) {
    .filter-btn {
      /* On very small screens, allow wrapping for better readability */
      white-space: normal;
      word-break: break-word; /* Break long words if necessary */
      text-align: center;
      line-height: 1.3; /* Tighter line height for wrapped text */
      padding: var(--space-2) var(--space-2);
    }
  }
</style>
