---
import '../styles/fonts.css';
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
}

const {
  title,
  description = 'Digital Transformation & Civic Technology Executive | Building Data-Driven Platforms that Turn Policy into Impact',
  image = '/og-image.jpg',
  type = 'website',
  publishedTime,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImage = new URL(image, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImage} />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImage} />
    <meta name="twitter:creator" content="@gavroz" />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" is:inline set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Gavin Rozzi",
      "url": "https://www.gavinrozzi.com",
      "image": "https://www.gavinrozzi.com/gavin-rozzi.jpg",
      "jobTitle": "Director of Data Center Administration",
      "description": description,
      "sameAs": [
        "https://github.com/gavinrozzi",
        "https://www.linkedin.com/in/gavin-rozzi/",
        "https://twitter.com/gavroz",
        "https://scholar.google.com/citations?user=slj82AIAAAAJ"
      ]
    })} />

    <!-- Additional SEO -->
    <meta name="author" content="Gavin Rozzi" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />

    <slot name="head" />
  </head>
  <body>
    <a href="#main-content" class="visually-hidden">Skip to content</a>
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
